<h1>List of Coffee Items</h1>
<ul>
    {{#each coffeeList}}
    <li>
        {{name}} | {{price}}
        <a href="/coffee/{{_id}}">View Details</a>
        <a href="/coffee/edit/{{_id}}">Edit Details</a>
        <form action="/coffee/delete/{{_id}}" method="POST">
            <button type="submit">Delete Item</button>
        </form>
    </li>
    {{/each}}
</ul>